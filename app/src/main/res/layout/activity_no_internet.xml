<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.NoInternetActivity">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/no_internet_img_id"
            android:layout_width="219dp"
            android:layout_height="234dp"
            android:layout_marginTop="116dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_wifi_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/check_internet_status_id"
            android:layout_width="298dp"
            android:layout_height="48dp"
            android:layout_marginTop="100dp"
            android:text="@string/check_internet"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/no_internet_img_id">

        </androidx.appcompat.widget.AppCompatButton>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>